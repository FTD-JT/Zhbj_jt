<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.jingtao.zhbj_jt.view.NoScrollViewPager
        android:id="@+id/vp_context"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.jingtao.zhbj_jt.view.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/btn_home_selector"
            android:text="首页"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="3dp"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="@drawable/btn_tab_text_color"
            />

        <RadioButton
            android:id="@+id/rb_newscenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/btn_newscenter_selector"
            android:text="新闻中心"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="3dp"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="@drawable/btn_tab_text_color"
            />

        <RadioButton
            android:id="@+id/rb_smartservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/btn_smartservice_selector"
            android:text="智慧服务"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="3dp"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="@drawable/btn_tab_text_color"
            />

        <RadioButton
            android:id="@+id/rb_govaffairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/btn_govaffairs_selector"
            android:text="政务"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="3dp"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="@drawable/btn_tab_text_color"
            />

        <RadioButton
            android:id="@+id/rb_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/btn_settings_selector"
            android:text="设置"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="3dp"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="@drawable/btn_tab_text_color"
            />


    </RadioGroup>


</LinearLayout>